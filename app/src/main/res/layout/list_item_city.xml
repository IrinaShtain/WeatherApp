<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_default"
    android:layout_marginLeft="@dimen/margin_half"
    android:layout_marginRight="@dimen/margin_half"
    android:background="@color/cardview_dark_background"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_default"
        >

        <TextView
            android:id="@+id/tvCityAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/container"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_marginEnd="@dimen/margin_default"
            android:textSize="@dimen/text_size_default"
            android:textStyle="bold|italic"
            tools:text="City City City City City City City CityCity City City CityCity City City City"/>


        <LinearLayout
            android:id="@id/container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCityTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_marginEnd="@dimen/margin_default"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginBottom="@dimen/margin_quart"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_default"
                android:textStyle="bold|italic"
                tools:text="5 Â°C"
                />

            <TextView
                android:id="@+id/tvCityLast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorGray"
                android:gravity="center"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold|italic"
                tools:text="22/03/16 \n 12:00"
                />


        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>


